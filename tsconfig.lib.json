{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "jsx": "react-jsx",
    "target": "ES2015",
    "esModuleInterop": true
  },
  "include": ["src/lib/**/*", "src/components/**/*", "src/utils/**/*"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.spec.tsx", "src/App.tsx", "src/main.tsx"]
}